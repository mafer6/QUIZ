<label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" placeholder="Pregunta" value="<%= quiz.pregunta %>"/> <p>
<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" placeholder="Respuesta" value="<%= quiz.respuesta %>"/> <p>
<label for="tema" class="rem">Tema:</label>
<select name="quiz[tema]">
  <option value="Otros" selected>Otros</option>
  <option value="Humanidades">Humanidades</option>
  <option value="Ocio">Ocio</option>
  <option value="Ciencia">Ciencia</option>
  <option value="Tecnología">Tecnología</option>
</select>
<label for="image" class="rem">Imagen:</label>
<input type="file" accept="image/*" id="image" name="image"/><p>
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Guardar">